<% content_for :title, "Showing scrap" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing scrap</h1>

  <%= render @scrap %>

  <%= link_to "Edit this scrap", edit_scrap_path(@scrap), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to scraps", scraps_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy this scrap", @scrap, method: :delete, data: { confirm: "¿Estás seguro de que quieres eliminar este retazo?\n\nReferencia: #{@scrap.ref_number}\nTipo: #{@scrap.scrap_type}\nGrosor: #{@scrap.thickness}\nColor: #{@scrap.color}\nDimensiones: #{@scrap.width}mm x #{@scrap.height}mm\nEstado: #{@scrap.status}\nObra: #{@scrap.output_work}\n\nEsta acción no se puede deshacer." }, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  </div>
</div>
