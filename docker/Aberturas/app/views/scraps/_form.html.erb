  </div>

  <div class="my-5">
    <%= form.label :width %>
    <%= form.text_field :width, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": scrap.errors[:width].none?, "border-red-400 focus:outline-red-600": scrap.errors[:width].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :height %>
