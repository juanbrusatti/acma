<div class="flex min-h-screen w-full flex-col" data-glassplates-page="true">
  <main class="flex flex-1 flex-col gap-4 p-4 md:gap-8 md:p-8">
    <div class="flex items-center">
      <h1 class="text-2xl font-semibold">Gestión de Stock</h1>
      <div class="flex gap-2 ml-auto">
        <%= link_to new_glassplate_path, class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-black hover:text-white h-9 px-3" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-3.5 w-3.5">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M8 12h8"></path>
            <path d="M12 8v8"></path>
          </svg>
          Agregar plancha
        <% end %>
        <%= link_to new_scrap_path, class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-black hover:text-white h-9 px-3" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-3.5 w-3.5">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M8 12h8"></path>
            <path d="M12 8v8"></path>
          </svg>
          Agregar retazo
        <% end %>
      </div>
    </div>

    <!-- Stock Summary Cards -->
    <div class="grid gap-4 md:grid-cols-2 md:gap-8 lg:grid-cols-4">
      <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
        <div class="flex flex-row items-center justify-between space-y-0 pb-2 p-6">
          <h3 class="text-sm font-medium">Planchas completas</h3>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-muted-foreground">
            <path d="M12 2L2 7l10 5l10-5l-10-5z"></path>
            <path d="M2 17l10 5l10-5"></path>
            <path d="M2 12l10 5l10-5"></path>
          </svg>
        </div>
        <div class="p-6 pt-0">
          <div class="text-2xl font-bold"><%= @glassplates.sum(&:quantity).to_i %></div>
          <p class="text-xs text-muted-foreground">Planchas en stock</p>
        </div>
      </div>

      <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
        <div class="flex flex-row items-center justify-between space-y-0 pb-2 p-6">
          <h3 class="text-sm font-medium">Retazos</h3>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-muted-foreground">
            <path d="M6 8L2 12L6 16"></path>
            <path d="M22 12L18 8L22 12L18 16"></path>
            <path d="M22 4L12 14L2 24"></path>
            <path d="M2 4L12 14L22 24"></path>
          </svg>
        </div>
        <div class="p-6 pt-0">
          <div class="text-2xl font-bold"><%= @scraps.count() %></div>
          <p class="text-xs text-muted-foreground">Cantidad de retazos</p>
        </div>
      </div>
    </div>

    <!-- Barra de búsqueda unificada -->
    <div class="bg-white border border-gray-200 rounded-2xl shadow-sm">
      <div class="px-8 pt-8 pb-4 border-b border-gray-100 rounded-t-2xl">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <div>
            <h2 class="text-3xl font-bold mb-1 text-gray-900">Gestión de Stock</h2>
            <p class="text-gray-400 text-base mb-2">Planchas completas y retazos de vidrio en el taller.</p>
          </div>

          <!-- Barra de búsqueda -->
          <div class="flex flex-col md:flex-row gap-3 w-full md:w-auto">
            <%= form_tag glassplates_path, method: :get, class: "flex flex-col md:flex-row gap-3 w-full", id: "search-form" do %>
              <%= hidden_field_tag :tab, params[:tab] || 'planchas', id: 'current-tab' %>
              <div class="relative w-full md:w-64">
                <%= text_field_tag :search, params[:search],
                    placeholder: params[:tab] == 'sobrantes' ? "Buscar retazos por referencia, tipo, grosor, color..." : "Buscar planchas por tipo, grosor, color...",
                    class: "pl-10 pr-4 py-2 border border-gray-300 rounded-lg w-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                </div>
              </div>

              <div class="flex gap-2 w-full md:w-auto">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300 flex-1">
                  Buscar
                </button>
                <% if params[:search].present? %>
                  <%= link_to "Limpiar", glassplates_path(tab: params[:tab] || 'planchas'), class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-lg transition duration-300 flex-1 text-center" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
      <div class="border-b p-4">
        <div class="flex space-x-2">
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow-sm hover:bg-primary/90" data-tab="planchas">
            Planchas completas
          </button>
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-background text-muted-foreground hover:bg-accent hover:text-accent-foreground" data-tab="sobrantes">
            Retazos
          </button>
        </div>
      </div>

      <!-- Planchas Completas Tab -->
      <div id="planchas-tab" class="tab-content">
        <div class="p-6">
          <div class="mb-4">
            <h3 class="text-lg font-semibold">Planchas completas</h3>
            <p class="text-sm text-muted-foreground">Listado de planchas de vidrio estándar en el taller.</p>
          </div>

          <div class="relative w-full overflow-auto">
            <table class="w-full caption-bottom text-sm">
              <thead class="[&_tr]:border-b">
                <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Tipo</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Grosor</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Color</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Ancho (mm)</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Alto (mm)</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Cantidad</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Acciones</th>
                </tr>
              </thead>
              <tbody class="[&_tr:last-child]:border-0">
                <% @glassplates&.each do |glassplate| %>
                  <tr class="border-b transition-colors hover:bg-muted/50" data-glassplate-id="<%= glassplate.id %>">
                    <td class="px-4 py-2 text-center"><%= glassplate.glass_type %></td>
                    <td class="px-4 py-2 text-center"><%= glassplate.thickness %></td>
                    <td class="px-4 py-2 text-center"><%= glassplate.color %></td>
                    <td class="px-4 py-2 text-center"><%= glassplate.width %></td>
                    <td class="px-4 py-2 text-center"><%= glassplate.height %></td>
                    <td class="px-4 py-2 text-center">
                      <span class="text-lg font-medium"><%= glassplate.quantity.to_i %></span>
                    </td>
                    <td class="px-4 py-2 text-center">
                      <div class="flex gap-2 justify-center">
                        <button type="button" class="edit-glassplate-btn w-8 h-8 rounded-full bg-blue-100 hover:bg-blue-200 text-blue-600 transition-colors duration-150 inline-flex items-center justify-center" title="Editar">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002 2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        </button>
                      <%= link_to glassplate_path(glassplate), data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de eliminar esta plancha?", url: glassplate_path(glassplate), type: "plancha" }, class: "w-8 h-8 rounded-full bg-red-100 hover:bg-red-200 text-red-600 transition-colors duration-150 inline-flex items-center justify-center delete-btn", title: "Eliminar" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M1 7h22M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2"/>
                        </svg>
                      <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Paginación para Glassplates -->
          <%= pagination_container(@glassplates, "planchas", {
            search: params[:search],
            tab: params[:tab]
          }) %>
        </div>
      </div>

      <!-- Retazos Tab -->
      <div id="sobrantes-tab" class="tab-content hidden">
        <div class="p-6">
          <div class="mb-4 flex items-center justify-between">
            <div>
              <h3 class="text-lg font-semibold">Retazos</h3>
              <p class="text-sm text-muted-foreground">Listado de retazos de vidrio en el taller.</p>
            </div>
            <button type="button" id="import-scraps-excel-btn" class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-green-600 text-white hover:bg-green-700 h-9 px-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-3.5 w-3.5">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="17 8 12 3 7 8"></polyline>
                <line x1="12" y1="3" x2="12" y2="15"></line>
              </svg>
              Importar desde Excel
            </button>
          </div>

          <div class="relative w-full overflow-auto">
            <table class="w-full caption-bottom text-sm">
              <thead class="[&_tr]:border-b">
                <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Referencia</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Tipo</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Grosor</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Color</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Ancho (mm)</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Alto (mm)</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Obra de procedencia</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Acciones</th>
                </tr>
              </thead>
              <tbody class="[&_tr:last-child]:border-0">
                <% @scraps&.each do |scrap| %>
                  <tr class="border-b transition-colors hover:bg-muted/50" data-scrap-id="<%= scrap.id %>">
                    <td class="px-4 py-2 text-center"><%= scrap.ref_number %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.scrap_type %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.thickness %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.color %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.width %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.height %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.input_work %></td>
                    <td class="px-4 py-2 text-center">
                      <div class="flex gap-2 justify-center">
                        <button type="button" class="edit-scrap-btn w-8 h-8 rounded-full bg-blue-100 hover:bg-blue-200 text-blue-600 transition-colors duration-150 inline-flex items-center justify-center" title="Editar">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002 2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        </button>
                      <%= link_to scrap_path(scrap), data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de eliminar este retazo?", url: scrap_path(scrap), type: "retazo" }, class: "w-8 h-8 rounded-full bg-red-100 hover:bg-red-200 text-red-600 transition-colors duration-150 inline-flex items-center justify-center delete-btn", title: "Eliminar" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M1 7h22M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2"/>
                        </svg>
                      <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Paginación para Scraps -->
          <%= pagination_container(@scraps, "retazos", {
            search: params[:search],
            tab: params[:tab]
          }) %>
        </div>
      </div>

    </div>
  </main>
</div>

<!-- Modal para importar sobrantes desde Excel -->
<div id="import-scraps-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-50">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4">
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold">Importar Sobrantes desde Excel</h2>
        <button type="button" id="close-scraps-modal-btn" class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>

      <div class="mb-4">
        <p class="text-sm text-gray-600 mb-4">
          Selecciona un archivo Excel (.xlsx o .xls) con el siguiente formato:
        </p>
        <div class="bg-gray-50 p-3 rounded text-xs text-gray-700 mb-4">
          <p class="font-semibold mb-2">Columnas requeridas:</p>
          <ul class="list-disc list-inside space-y-1">
            <li><strong>COMPOSICION:</strong> Tipo, grosor y color (ej: "COL 4+4 STB")</li>
            <li><strong>BASE [mm]:</strong> Ancho en milímetros</li>
            <li><strong>ALTO [mm]:</strong> Alto en milímetros</li>
            <li><strong>REFERENCIA:</strong> (opcional) Código de referencia del sobrante</li>
            <li><strong>ORIGEN:</strong> (opcional) Obra de procedencia</li>
          </ul>
        </div>
      </div>

      <%= form_with url: import_scraps_path, method: :post, multipart: true, id: "import-scraps-form", class: "space-y-4" do |form| %>
        <div>
          <%= form.file_field :file, accept: ".xlsx,.xls", required: true, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer" %>
        </div>

        <div id="import-scraps-errors" class="hidden text-sm text-red-600 bg-red-50 p-3 rounded"></div>
        <div id="import-scraps-success" class="hidden text-sm text-green-600 bg-green-50 p-3 rounded"></div>

        <div class="flex gap-3 justify-end">
          <button type="button" id="cancel-scraps-import-btn" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200 transition-colors">
            Cancelar
          </button>
          <%= form.submit "Importar", class: "px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700 transition-colors", id: "submit-scraps-import-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

