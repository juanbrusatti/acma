<div class="flex min-h-screen w-full flex-col">
  <main class="flex flex-1 flex-col gap-4 p-4 md:gap-8 md:p-8">
    <div class="flex items-center">
      <h1 class="text-2xl font-semibold">Gestión de Stock</h1>
      <div class="flex gap-2 ml-auto">
        <%= link_to new_glassplate_path, class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-black hover:text-white h-9 px-3" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-3.5 w-3.5">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M8 12h8"></path>
            <path d="M12 8v8"></path>
          </svg>
          Agregar plancha
        <% end %>
        <%= link_to new_scrap_path, class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-black hover:text-white h-9 px-3" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-3.5 w-3.5">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M8 12h8"></path>
            <path d="M12 8v8"></path>
          </svg>
          Agregar retazo
        <% end %>
      </div>
    </div>

    <!-- Stock Summary Cards -->
    <div class="grid gap-4 md:grid-cols-2 md:gap-8 lg:grid-cols-4">
      <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
        <div class="flex flex-row items-center justify-between space-y-0 pb-2 p-6">
          <h3 class="text-sm font-medium">Planchas completas</h3>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-muted-foreground">
            <path d="M12 2L2 7l10 5l10-5l-10-5z"></path>
            <path d="M2 17l10 5l10-5"></path>
            <path d="M2 12l10 5l10-5"></path>
          </svg>
        </div>
        <div class="p-6 pt-0">
          <div class="text-2xl font-bold"><%= @glassplates.sum(&:quantity).to_i %></div>
          <p class="text-xs text-muted-foreground">Planchas en stock</p>
        </div>
      </div>

      <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
        <div class="flex flex-row items-center justify-between space-y-0 pb-2 p-6">
          <h3 class="text-sm font-medium">Retazos</h3>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-muted-foreground">
            <path d="M6 8L2 12L6 16"></path>
            <path d="M22 12L18 8L22 12L18 16"></path>
            <path d="M22 4L12 14L2 24"></path>
            <path d="M2 4L12 14L22 24"></path>
          </svg>
        </div>
        <div class="p-6 pt-0">
          <div class="text-2xl font-bold"><%= @scraps.count() %></div>
          <p class="text-xs text-muted-foreground">Cantidad de retazos</p>
        </div>
      </div>

      <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
        <div class="flex flex-row items-center justify-between space-y-0 pb-2 p-6">
          <h3 class="text-sm font-medium">Disponibles</h3>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-muted-foreground">
            <path d="M9 12l2 2 4-4"></path>
            <path d="M21 12c-1 0-2-1-2-2s1-2 2-2 2 1 2 2-1 2-2 2z"></path>
            <path d="M3 12c1 0 2-1 2-2s-1-2-2-2-2 1-2 2 1 2 2 2z"></path>
          </svg>
        </div>
        <div class="p-6 pt-0">
          <div class="text-2xl font-bold"><%= @scraps.select { |s| s.status == "Disponible" }.count %></div>
          <p class="text-xs text-muted-foreground">Retazos disponibles</p>
        </div>
      </div>

      <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
        <div class="flex flex-row items-center justify-between space-y-0 pb-2 p-6">
          <h3 class="text-sm font-medium">Reservados</h3>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-muted-foreground">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
        </div>
        <div class="p-6 pt-0">
          <div class="text-2xl font-bold"><%= @scraps.select { |s| s.status == "Reservado" }.count %></div>
          <p class="text-xs text-muted-foreground">Retazos reservados</p>
        </div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
      <div class="border-b p-4">
        <div class="flex space-x-2">
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow-sm hover:bg-primary/90" data-tab="planchas">
            Planchas completas
          </button>
          <button class="inline-flex items-center justify-center whitespace-nowrap rounded-sm px-3 py-1.5 text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-background text-muted-foreground hover:bg-accent hover:text-accent-foreground" data-tab="sobrantes">
            Retazos
          </button>
        </div>
      </div>

      <!-- Planchas Completas Tab -->
      <div id="planchas-tab" class="tab-content">
        <div class="p-6">
          <div class="mb-4">
            <h3 class="text-lg font-semibold">Planchas completas</h3>
            <p class="text-sm text-muted-foreground">Listado de planchas de vidrio estándar en el taller.</p>
          </div>

          <div class="relative w-full overflow-auto">
            <table class="w-full caption-bottom text-sm">
              <thead class="[&_tr]:border-b">
                <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Tipo</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Grosor</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Color</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Ancho (mm)</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Alto (mm)</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Cantidad</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Acciones</th>
                </tr>
              </thead>
              <tbody class="[&_tr:last-child]:border-0">
                <% @glassplates&.each do |glassplate| %>
                  <tr class="border-b transition-colors hover:bg-muted/50">
                    <td class="px-4 py-2 text-center"><%= glassplate.glass_type %></td>
                    <td class="px-4 py-2 text-center"><%= glassplate.thickness %></td>
                    <td class="px-4 py-2 text-center"><%= glassplate.color %></td>
                    <td class="px-4 py-2 text-center"><%= glassplate.width %></td>
                    <td class="px-4 py-2 text-center"><%= glassplate.height %></td>
                    <td class="px-4 py-2 text-center">
                      <div class="quantity-controls" data-glassplate-id="<%= glassplate.id %>" data-current-quantity="<%= glassplate.quantity %>">
                        <!-- Vista normal -->
                        <div class="quantity-display">
                          <button class="quantity-btn minus-btn" title="Reducir cantidad" type="button">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                            </svg>
                          </button>
                          <span class="quantity-value"><%= glassplate.quantity.to_i %></span>
                          <button class="quantity-btn plus-btn" title="Aumentar cantidad" type="button">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                          </button>
                        </div>
                        
                        <!-- Vista de edición (oculta por defecto) -->
                        <div class="quantity-edit hidden">
                          <div class="flex items-center gap-2">
                            <button class="quantity-btn minus-btn-edit" title="Reducir cantidad" type="button">
                              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                              </svg>
                            </button>
                            <input type="number" class="quantity-input" min="0" value="<%= glassplate.quantity.to_i %>">
                            <button class="quantity-btn plus-btn-edit" title="Aumentar cantidad" type="button">
                              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                              </svg>
                            </button>
                            <button class="confirm-btn" title="Confirmar cambios" type="button">
                              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                              </svg>
                            </button>
                            <button class="cancel-btn" title="Cancelar" type="button">
                              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                              </svg>
                            </button>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="px-4 py-2 text-center">
                      <%= link_to edit_glassplate_path(glassplate), class: "w-8 h-8 rounded-full bg-blue-100 hover:bg-blue-200 text-blue-600 transition-colors duration-150 inline-flex items-center justify-center", title: "Editar" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002 2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      <% end %>
                      <%= link_to glassplate_path(glassplate), method: :delete, class: "w-8 h-8 rounded-full bg-red-100 hover:bg-red-200 text-red-600 transition-colors duration-150 inline-flex items-center justify-center delete-btn", title: "Eliminar", data: { url: glassplate_path(glassplate), type: "plancha" } do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M1 7h22M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2"/>
                        </svg>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Retazos Tab -->
      <div id="sobrantes-tab" class="tab-content hidden">
        <div class="p-6">
          <div class="mb-4">
            <h3 class="text-lg font-semibold">Retazos</h3>
            <p class="text-sm text-muted-foreground">Listado de retazos de vidrio en el taller.</p>
          </div>

          <div class="relative w-full overflow-auto">
            <table class="w-full caption-bottom text-sm">
              <thead class="[&_tr]:border-b">
                <tr class="border-b transition-colors hover:bg-muted/50 data-[state=selected]:bg-muted">
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Referencia</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Tipo</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Grosor</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Color</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Ancho (mm)</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Alto (mm)</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Estado</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Obra</th>
                  <th class="h-12 px-4 text-center align-middle font-medium text-muted-foreground">Acciones</th>
                </tr>
              </thead>
              <tbody class="[&_tr:last-child]:border-0">
                <% @scraps&.each do |scrap| %>
                  <tr class="border-b transition-colors hover:bg-muted/50">
                    <td class="px-4 py-2 text-center"><%= scrap.ref_number %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.scrap_type %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.thickness %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.color %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.width %></td>
                    <td class="px-4 py-2 text-center"><%= scrap.height %></td>
                    <td class="px-4 py-2 text-center">
                      <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 <%= scrap.status == "Disponible" ? 'border-transparent bg-green-100 text-green-800' : 'border-transparent bg-yellow-100 text-yellow-800' %>">
                        <%= scrap.status %>
                      </span>
                    </td>
                    <td class="px-4 py-2 text-center"><%= scrap.output_work %></td>
                    <td class="px-4 py-2 text-center">
                      <%= link_to edit_scrap_path(scrap), class: "w-8 h-8 rounded-full bg-blue-100 hover:bg-blue-200 text-blue-600 transition-colors duration-150 inline-flex items-center justify-center", title: "Editar" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002 2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      <% end %>
                      <%= link_to scrap_path(scrap), method: :delete, class: "w-8 h-8 rounded-full bg-red-100 hover:bg-red-200 text-red-600 transition-colors duration-150 inline-flex items-center justify-center delete-btn", title: "Eliminar", data: { url: scrap_path(scrap), type: "retazo" } do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M1 7h22M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2"/>
                        </svg>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabs = document.querySelectorAll('[data-tab]');
  const tabContents = document.querySelectorAll('.tab-content');

  tabs.forEach(tab => {
    tab.addEventListener('click', function() {
      const targetTab = this.getAttribute('data-tab');

      // Update tab buttons
      tabs.forEach(t => {
        t.classList.remove('bg-primary', 'text-primary-foreground', 'shadow-sm');
        t.classList.add('bg-background', 'text-muted-foreground');
      });
      this.classList.remove('bg-background', 'text-muted-foreground');
      this.classList.add('bg-primary', 'text-primary-foreground', 'shadow-sm');

      // Update tab content
      tabContents.forEach(content => {
        content.classList.add('hidden');
      });
      document.getElementById(targetTab + '-tab').classList.remove('hidden');
    });
  });
});
</script>
