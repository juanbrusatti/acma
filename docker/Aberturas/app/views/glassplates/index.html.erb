<script>
// Funci√≥n para inicializar el sistema de tabs
function initializeTabs() {
  console.log('üöÄ Initializing tabs system');
  
  const tabs = document.querySelectorAll('[data-tab]');
  const tabContents = document.querySelectorAll('.tab-content');

  console.log('üîç Found tabs:', tabs.length);
  console.log('üîç Found tab contents:', tabContents.length);

  if (tabs.length === 0 || tabContents.length === 0) {
    console.log('‚ùå Missing required tab elements');
    return;
  }

  // Limpiar listeners existentes para evitar duplicados
  tabs.forEach(tab => {
    const newTab = tab.cloneNode(true);
    tab.parentNode.replaceChild(newTab, tab);
  });

  // Obtener los nuevos elementos despu√©s del reemplazo
  const newTabs = document.querySelectorAll('[data-tab]');

  newTabs.forEach(tab => {
    tab.addEventListener('click', function() {
      console.log('üìù Tab clicked:', this.getAttribute('data-tab'));
      const targetTab = this.getAttribute('data-tab');

      // Update tab buttons
      newTabs.forEach(t => {
        t.classList.remove('bg-primary', 'text-primary-foreground', 'shadow-sm');
        t.classList.add('bg-background', 'text-muted-foreground');
      });
      this.classList.remove('bg-background', 'text-muted-foreground');
      this.classList.add('bg-primary', 'text-primary-foreground', 'shadow-sm');

      // Update tab content
      tabContents.forEach(content => {
        content.classList.add('hidden');
      });
      const targetContent = document.getElementById(targetTab + '-tab');
      if (targetContent) {
        targetContent.classList.remove('hidden');
        console.log('‚úÖ Switched to tab:', targetTab);
      } else {
        console.log('‚ùå Target content not found:', targetTab + '-tab');
      }
    });
  });

  console.log('‚úÖ Tabs system initialized');
}

// Inicializar cuando se carga la p√°gina
document.addEventListener('DOMContentLoaded', initializeTabs);

// Tambi√©n inicializar cuando se navega con Turbo (para Rails 7+)
document.addEventListener('turbo:load', initializeTabs);
</script>

