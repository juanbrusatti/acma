<div class="bg-white border border-gray-200 rounded-2xl shadow-sm p-6 space-y-6">
  <div class="space-y-4">
    <h2 class="text-lg font-semibold text-gray-800">Resumen y acciones</h2>

    <div class="flex justify-between text-sm text-gray-600">
      <span>Subtotal (sin IVA)</span>
      <span id="subtotal-price"><%= format_argentine_currency(@project.try(:subtotal) || 0, unit: "$", precision: 2) %></span>
    </div>

    <div class="flex justify-between text-sm text-gray-600">
      <span>IVA (21%)</span>
      <span id="iva-value"><%= format_argentine_currency(@project.try(:iva) || 0, unit: "$", precision: 2) %></span>
    </div>

    <div class="border-t border-gray-200 pt-4 flex justify-between text-base font-bold text-gray-900">
      <span>Total con IVA</span>
      <span id="price-total"><%= format_argentine_currency(@project.try(:total) || 0, unit: "$", precision: 2) %></span>
    </div>

  </div>
  <% if @project.persisted? %>
      <div class="grid grid-cols-1 space-y-6 md:grid-cols-2 gap-3">
        <%= f.hidden_field :price, id: "hidden-project-price" %>
        <%= f.hidden_field :price_without_iva, id: "hidden-project-price-without-iva" %>
        <%= f.submit "Guardar como presupuesto", class: "w-full bg-black text-white font-medium rounded-lg py-2 text-sm hover:opacity-90 transition" %>
        <%= link_to "Volver a proyectos", projects_path, class: "w-full border border-gray-300 font-medium rounded-lg py-2 text-sm text-center hover:bg-gray-50 transition" %>
      </div>
    <% else %>
      <div class="grid grid-cols-1 md:grid-cols-1 gap-3">
        <%= f.hidden_field :price, id: "hidden-project-price" %>
        <%= f.hidden_field :price_without_iva, id: "hidden-project-price-without-iva" %>
        <%= f.submit "Crear proyecto y continuar", class: "w-full bg-black text-white font-medium rounded-lg py-2 text-sm hover:opacity-90 transition" %>
      </div>
    <% end %>
</div>