<%# Title for the page #%>
<%#  Sets the page title %>
<% content_for :title, @project.persisted? ? "Agregar elementos al proyecto" : "Crear proyecto" %>

<div class="w-full p-4 md:p-8">
    <h1 class="text-lg font-semibold mb-3">
        <%= @project.persisted? ? "Agregar elementos al proyecto" : "Generar proyecto" %>
    </h1>

    <% if @project.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold mb-2">Errores al guardar el proyecto:</h2>
        <ul>
            <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
        </div>
    <% end %>
    <%= render partial: "projects/partials/form" %>
</div>

<!-- Hidden template for cloning DVH fields -->
<!--  Template for dynamically adding new DVH rows -->
<template id="dvh-template">
  <div class="border border-gray-300 rounded p-4 mb-4 dvh-fields space-y-4 mt-6">

    <!-- Fila 1: Tipología, Cámara, Ancho, Alto, Abertura, Cantidad -->
    <div class="grid grid-cols-6 gap-6 mb-4">
      <div>
        <label>Tipología</label>
        <div class="flex items-center border border-gray-300 rounded px-2 py-1 focus-within:ring-2 focus-within:ring-blue-500 focus-within:border-blue-500 bg-white">
          <span class="text-gray-700 font-medium mr-1">V</span>
          <input type="number" class="flex-1 border-0 outline-none typology-number-input bg-transparent" placeholder="1" min="1"
                 oninput="this.parentElement.querySelector('.typology-hidden-field').value = this.value ? 'V' + this.value : ''" />
          <input type="hidden" name="project[dvhs_attributes][][typology]" class="typology-hidden-field" value="" />
        </div>
      </div>
      <div>
        <label>Cámara</label>
        <select name="project[dvhs_attributes][][innertube]" class="w-full border rounded px-2 py-1">
          <option value="">Seleccionar</option>
          <option value="6">6</option>
          <option value="9">9</option>
          <option value="12">12</option>
          <option value="20">20</option>
        </select>
      </div>
      <div>
        <label>Ancho</label>
        <input type="number" name="project[dvhs_attributes][][width]" class="w-full border rounded px-2 py-1" />
      </div>
      <div>
        <label>Alto</label>
        <input type="number" name="project[dvhs_attributes][][height]" class="w-full border rounded px-2 py-1" />
      </div>
      <div>
        <label>Abertura</label>
        <select name="project[dvhs_attributes][][type_opening]" class="w-full border rounded px-2 py-1">
          <option value="">Seleccionar</option>
          <option value="PVC">PVC</option>
          <option value="Aluminio">Aluminio</option>
        </select>
      </div>
      <div class="quantity-field" data-only-create>
        <label>Cantidad</label>
        <input type="number" class="w-full border rounded px-2 py-1 quantity-input" value="1" min="1" max="100">
      </div>
    </div>

    <!-- Fila 2: Cristal 1 y Cristal 2 -->
    <div class="mb-4">
      <h3 class="font-semibold text-sm mb-2">Cristales</h3>
      <div class="grid grid-cols-6 gap-6">
        <!-- Cristal 1 -->
        <div>
          <label class="text-xs text-gray-600">Cristal 1 - Tipo</label>
          <select name="project[dvhs_attributes][][glasscutting1_type]" class="w-full border rounded px-2 py-1 glasscutting1-type-select">
            <option value="">Seleccionar</option>
            <option value="LAM">LAM</option>
            <option value="FLO">FLO</option>
            <option value="COL">COL</option>
          </select>
        </div>
        <div>
          <label class="text-xs text-gray-600">Cristal 1 - Grosor</label>
          <select name="project[dvhs_attributes][][glasscutting1_thickness]" class="w-full border rounded px-2 py-1 glasscutting1-thickness-select">
            <option value="">Seleccionar</option>
          </select>
        </div>
        <div>
          <label class="text-xs text-gray-600">Cristal 1 - Color</label>
          <select name="project[dvhs_attributes][][glasscutting1_color]" class="w-full border rounded px-2 py-1 glasscutting1-color-select">
            <option value="">Seleccionar</option>
          </select>
        </div>
        <!-- Cristal 2 -->
        <div>
          <label class="text-xs text-gray-600">Cristal 2 - Tipo</label>
          <select name="project[dvhs_attributes][][glasscutting2_type]" class="w-full border rounded px-2 py-1 glasscutting2-type-select">
            <option value="">Seleccionar</option>
            <option value="LAM">LAM</option>
            <option value="FLO">FLO</option>
            <option value="COL">COL</option>
          </select>
        </div>
        <div>
          <label class="text-xs text-gray-600">Cristal 2 - Grosor</label>
          <select name="project[dvhs_attributes][][glasscutting2_thickness]" class="w-full border rounded px-2 py-1 glasscutting2-thickness-select">
            <option value="">Seleccionar</option>
          </select>
        </div>
        <div>
          <label class="text-xs text-gray-600">Cristal 2 - Color</label>
          <select name="project[dvhs_attributes][][glasscutting2_color]" class="w-full border rounded px-2 py-1 glasscutting2-color-select">
            <option value="">Seleccionar</option>
          </select>
        </div>
      </div>
    </div>

    <div class="flex items-center gap-1 col-span-1 mt-6">
      <div>
        <button type="button" class="confirm-dvh bg-green-500 hover:bg-green-600 text-white px-2 py-2 rounded text-xs font-semibold leading-tight" style="min-width:1;">Confirmar</button>
      </div>
      <div> 
        <button type="button" class="cancel-dvh bg-gray-200 hover:bg-gray-300 text-gray-700 px-2 py-2 rounded text-xs font-semibold leading-tight" style="min-width:1;">Cancelar</button>
      </div>
    </div>

  </div>
</template>

