<tr id="glass_price_row_<%= glass_price.id %>">
  <td class="px-2 md:px-4 py-2 text-center text-sm"><%= glass_price.glass_type %></td>
  <td class="px-2 md:px-4 py-2 text-center text-sm"><%= glass_price.thickness %></td>
  <td class="px-2 md:px-4 py-2 text-center text-sm"><%= glass_price.color %></td>
  <td class="px-2 md:px-4 py-2">
    <%= turbo_frame_tag "glass_price_#{glass_price.id}" do %>
      <div class="grid grid-cols-4 items-center gap-1 md:gap-2">
        <div class="px-1 md:px-2 py-1 text-center text-sm">
          <% if glass_price.buying_price.present? && glass_price.buying_price > 0 %>
            <%= format_argentine_currency(glass_price.buying_price, unit: "$", precision: 2) %>
          <% else %>
            <span class="text-gray-400 text-xs">N/A</span>
          <% end %>
        </div>
        <div class="px-1 md:px-2 py-1 text-center text-sm">
          <% if glass_price.percentage.present? %>
            <%= number_with_precision(glass_price.percentage, precision: 1) %>%
          <% else %>
            <span class="text-gray-400 text-xs">N/A</span>
          <% end %>
        </div>
        <div class="px-1 md:px-2 py-1 text-center text-sm">
          <span class="font-semibold text-green-700">
            <% if glass_price.selling_price.present? && glass_price.selling_price > 0 %>
              <%= format_argentine_currency(glass_price.selling_price, unit: "$", precision: 2) %>
            <% else %>
              N/A
            <% end %>
          </span>
        </div>
        <div class="px-1 md:px-2 py-1 text-center">
          <%= link_to edit_glass_price_path(glass_price),
              data: { turbo_frame: "glass_price_#{glass_price.id}" },
              class: "w-6 h-6 md:w-8 md:h-8 rounded-full bg-blue-100 hover:bg-blue-200 text-blue-600 transition-colors duration-150 inline-flex items-center justify-center" do %>
            <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002 2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          <% end %>
        </div>
      </div>
    <% end %>
  </td>
</tr>