<% content_for :title, "Precios" %>

<%= render "shared/flash" %>

<div class="px-2 md:px-4 lg:px-16 pb-12">
  <!-- Glass Prices Container - Main section for managing glass pricing -->
  <div class="mt-8 w-full rounded-xl border border-gray-200 bg-white shadow-md">
    <div class="flex flex-col space-y-1.5 p-4 md:p-6">
      <div class="flex justify-between items-start flex-wrap gap-4">
        <!-- Page Title and Description Section -->
        <div>
          <h1 class="text-xl md:text-2xl font-semibold tracking-tight text-gray-900">Gestionar precios</h1>
          <p class="text-sm text-gray-500">Actualice la lista de precios por tipo, color y grosor del vidrio.</p>
        </div>

        <!-- Global Percentage Update Form - Floating form positioned on the right side -->
        <%= form_with url: update_all_percentages_glass_prices_path, method: :patch, local: false,
                      class: "flex items-center gap-3 bg-gradient-to-r from-blue-50 to-indigo-50 border-2 border-blue-200 px-5 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-40",
                      data: {
                        turbo: true,
                        turbo_method: "patch",
                        controller: "percentage-form",
                        action: "submit->percentage-form#submit"
                      } do |form| %>

          <!-- Form Label Section with Icon and Text -->
          <div class="flex items-center gap-2">
            <!-- Dollar/Percentage Icon for visual clarity -->
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
            <label for="percentage_input" class="text-sm font-medium text-blue-900 whitespace-nowrap">
              Actualizar porcentaje de ganancia general:
            </label>
          </div>

          <!-- Input Field Section with Percentage Symbol -->
          <div class="flex items-center gap-2">
            <!-- Number input for percentage value -->
            <%= form.number_field :percentage,
                                  id: "percentage_input",
                                  step: 0.1,
                                  min: 0,
                                  placeholder: "0.0",
                                  class: "w-24 px-3 py-2 text-sm font-medium text-center border-2 border-blue-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white shadow-sm transition-all duration-200",
                                  data: { "percentage-form-target": "input" } %>
            <!-- Percentage symbol for visual reference -->
            <span class="text-sm font-medium text-blue-700">%</span>
          </div>

          <!-- Submit Button with Gradient and Hover Effects -->
          <%= form.submit "Aplicar",
                          class: "px-4 py-2 text-sm font-semibold bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-200",
                          data: { "percentage-form-target": "submit" } %>

        <% end %>
      </div>
    </div>

    <!-- Glass Prices Table Section - Displays all glass price combinations -->
    <div class="p-4 md:p-6 pt-0">
      <%= render "glass_prices_table", combinations: @combinations %>
    </div>
  </div>

  <!-- Supplies Container - Section for managing additional supply prices -->
  <div class="mt-8 w-full rounded-xl border border-gray-200 bg-white shadow-md px-6 md:px-10">
    <!-- Supplies Header Section -->
    <div class="flex flex-col space-y-1.5 p-6">
      <div class="flex justify-between items-start flex-wrap gap-4">
        <!-- Supplies Title and Description -->
        <div>
          <h2 class="text-xl font-semibold tracking-tight text-gray-900">Precios de insumos</h2>
          <p class="text-sm text-gray-500">Edite el precio de cada insumo adicional.</p>
        </div>

        <!-- Official Rate Controls Section -->
        <div class="flex items-center gap-3">
          <!-- Official Rate Update Form - Similar to percentage form -->
          <%= form_with url: update_all_supplies_official_glass_prices_path, method: :patch, local: false,
                        class: "flex items-center gap-3 bg-gradient-to-r from-green-50 to-emerald-50 border-2 border-green-200 px-5 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200",
                        data: {
                          turbo: true,
                          turbo_method: "patch",
                          controller: "official-form",
                          action: "submit->official-form#submit"
                        } do |form| %>

          <!-- Form Label Section with Icon and Text -->
          <div class="flex items-center gap-2">
            <!-- Dollar Icon for visual clarity -->
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
            <label for="official_rate_input" class="text-sm font-medium text-green-900 whitespace-nowrap">
              Dólar Oficial:
            </label>
          </div>

          <!-- Input Field Section with Dollar Symbol -->
          <div class="flex items-center gap-2">
            <!-- Number input for official rate value -->
            <%= form.number_field :official_rate,
                                  id: "official_rate_input",
                                  step: 0.01,
                                  min: 0,
                                  value: AppConfig.current_official_rate > 0 ? AppConfig.current_official_rate : nil,
                                  placeholder: "0.00",
                                  class: "w-28 px-3 py-2 text-sm font-medium text-center border-2 border-green-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 bg-white shadow-sm transition-all duration-200",
                                  data: { "official-form-target": "input" } %>
            <!-- Dollar symbol for visual reference -->
            <span class="text-sm font-medium text-green-700">ARS</span>
          </div>

          <!-- Submit Button with Gradient and Hover Effects -->
          <%= form.submit "Actualizar",
                          class: "px-4 py-2 text-sm font-semibold bg-gradient-to-r from-green-600 to-emerald-600 text-white rounded-lg hover:from-green-700 hover:to-emerald-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-200",
                          data: { "official-form-target": "submit" } %>

          <% end %>

          <!-- Additional Official Rate Controls -->
          <div class="flex gap-2">
            <!-- Update from API Button -->
            <%= link_to update_official_from_api_glass_prices_path, 
                method: :post, 
                class: "px-3 py-2 text-sm font-semibold bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-200",
                data: { 
                  confirm: "¿Está seguro que desea actualizar el dólar oficial desde la API?",
                  turbo_method: "post"
                } do %>
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
              </svg>
              API
            <% end %>

            <!-- History Button -->
            <%= link_to official_history_glass_prices_path, 
                class: "px-3 py-2 text-sm font-semibold bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-lg hover:from-purple-700 hover:to-pink-700 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-200" do %>
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
              Historial
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- Supplies Table Section -->
    <div class="p-6 pt-0">
      <%= render "supplies_table" %>
    </div>
  </div>
</div>
