<div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg p-6 mb-8">
  <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center justify-between">
    <div class="flex flex-col gap-2">
      <h3 class="text-sm font-medium">Filtrar Proyectos</h3>
      <p class="text-xs text-muted-foreground">Organiza por estado</p>
    </div>
    <div class="flex gap-2">
      <%= link_to "Todos", projects_path, class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 #{params[:status].blank? ? 'bg-primary text-primary-foreground hover:bg-primary/90' : 'border border-input bg-background hover:bg-accent hover:text-accent-foreground'} h-9 px-3" %>
      <%= link_to "En Proceso", projects_path(status: 'En Proceso'), class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 #{params[:status] == 'En Proceso' ? 'bg-primary text-primary-foreground hover:bg-primary/90' : 'border border-input bg-background hover:bg-accent hover:text-accent-foreground'} h-9 px-3" %>
      <%= link_to "Terminados", projects_path(status: 'Terminado'), class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 #{params[:status] == 'Terminado' ? 'bg-primary text-primary-foreground hover:bg-primary/90' : 'border border-input bg-background hover:bg-accent hover:text-accent-foreground'} h-9 px-3" %>
      <%= link_to "Pendientes", projects_path(status: 'Pendiente'), class: "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 #{params[:status] == 'Pendiente' ? 'bg-primary text-primary-foreground hover:bg-primary/90' : 'border border-input bg-background hover:bg-accent hover:text-accent-foreground'} h-9 px-3" %>
    </div>
  </div>
</div> 