<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
    <div class="flex flex-row items-center justify-between space-y-0 pb-2 p-6">
      <h3 class="text-sm font-medium">Total de Proyectos</h3>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-muted-foreground">
        <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
        <polyline points="14,2 14,8 20,8"></polyline>
        <line x1="16" y1="13" x2="8" y2="13"></line>
        <line x1="16" y1="17" x2="8" y2="17"></line>
        <polyline points="10,9 9,9 8,9"></polyline>
      </svg>
    </div>
    <div class="p-6 pt-0">
      <div class="text-2xl font-bold"><%= @projects.count %></div>
      <p class="text-xs text-muted-foreground">Proyectos registrados</p>
    </div>
  </div>

  <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
    <div class="flex flex-row items-center justify-between space-y-0 pb-2 p-6">
      <h3 class="text-sm font-medium">En Proceso</h3>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-muted-foreground">
        <path d="M12 2v4"></path>
        <path d="M12 18v4"></path>
        <path d="M4.93 4.93l2.83 2.83"></path>
        <path d="M16.24 16.24l2.83 2.83"></path>
        <path d="M2 12h4"></path>
        <path d="M18 12h4"></path>
        <path d="M4.93 19.07l2.83-2.83"></path>
        <path d="M16.24 7.76l2.83-2.83"></path>
      </svg>
    </div>
    <div class="p-6 pt-0">
      <div class="text-2xl font-bold"><%= @projects.where(status: 'En Proceso').count %></div>
      <p class="text-xs text-muted-foreground">Obras activas</p>
    </div>
  </div>

  <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg">
    <div class="flex flex-row items-center justify-between space-y-0 pb-2 p-6">
      <h3 class="text-sm font-medium">Completados</h3>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-muted-foreground">
        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
        <polyline points="22,4 12,14.01 9,11.01"></polyline>
      </svg>
    </div>
    <div class="p-6 pt-0">
      <div class="text-2xl font-bold"><%= @projects.where(status: 'Terminado').count %></div>
      <p class="text-xs text-muted-foreground">Proyectos finalizados</p>
    </div>
  </div>
</div> 