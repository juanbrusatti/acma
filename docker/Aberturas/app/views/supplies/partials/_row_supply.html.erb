<tr id="supply_row_<%= supply.id %>">
  <!-- Supply Name Column -->
  <td class="px-4 py-2 font-medium text-gray-900"><%= supply.name %></td>
  
  <!-- USD Price Column with inline edit -->
  <td class="px-4 py-2" id="supply_price_cell_<%= supply.id %>">
    <div class="flex items-center gap-2">
      <!-- Price Display -->
      <span class="font-semibold text-blue-700" id="price_display_<%= supply.id %>">
        <% if supply.price_usd.present? && supply.price_usd > 0 %>
          US$<%= number_with_precision(supply.price_usd, precision: 2) %>
        <% else %>
          <span class="text-gray-400">N/A</span>
        <% end %>
      </span>
      
      <!-- Edit Form (initially hidden) -->
      <div id="edit_form_<%= supply.id %>" class="hidden flex items-center gap-2">
        <%= form_with(model: supply, local: false, class: "flex items-center gap-2") do |f| %>
          <%= f.number_field :price_usd, value: supply.price_usd, step: 0.01, min: 0,
              class: "w-24 px-2 py-1 border border-blue-300 rounded text-center text-blue-700 font-semibold focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          <%= f.submit "✓", class: "px-2 py-1 bg-green-500 text-white rounded hover:bg-green-600 text-xs cursor-pointer" %>
        <% end %>
        <button onclick="cancelEdit(<%= supply.id %>)" 
                class="px-2 py-1 bg-gray-500 text-white rounded hover:bg-gray-600 text-xs cursor-pointer">
          ✕
        </button>
      </div>
      
      <!-- Edit Button -->
      <button onclick="startEdit(<%= supply.id %>)" 
              id="edit_btn_<%= supply.id %>"
              class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-blue-100 hover:bg-blue-200 text-blue-600 transition-colors duration-150"
              title="Editar precio USD">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      </button>
    </div>
  </td>
  
  <!-- Peso Price Column (Read-only, calculated) -->
  <td class="px-4 py-2">
    <span class="font-semibold text-green-700">
      <% if supply.price_peso.present? && supply.price_peso > 0 %>
        $<%= number_with_precision(supply.price_peso, precision: 2) %>
      <% else %>
        <span class="text-gray-400">N/A</span>
      <% end %>
    </span>
  </td>
</tr>