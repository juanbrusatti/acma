<% content_for :title, "Precios de Vidrios" %>

<div class="px-4 md:px-16 pb-12">
  <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg mt-8 px-6 md:px-10 w-full">
    <div class="flex flex-col space-y-1.5 p-6">
      <h1 class="text-2xl font-semibold leading-none tracking-tight">Administrar Precios de Vidrios</h1>
      <p class="text-sm text-muted-foreground">Actualiza la lista de precios por tipo, color y espesor de vidrio.</p>
    </div>
    <div class="p-6 pt-0">
      <div class="overflow-x-auto mt-4">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Tipo</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Grosor</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Color</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Precio mÂ²</th>
              <th class="px-4 py-2"></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @combinaciones.each do |precio_vidrio| %>
              <%= render partial: "fila_precio_vidrio", locals: { precio_vidrio: precio_vidrio } %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg mt-8 px-6 md:px-10 w-full">
    <div class="flex flex-col space-y-1.5 p-6">
      <h2 class="text-xl font-semibold leading-none tracking-tight">Precios de Insumos</h2>
      <p class="text-sm text-muted-foreground">Edita el precio de cada insumo adicional.</p>
    </div>
    <div class="p-6 pt-0">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Insumo</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Precio M</th>
            <th class="px-4 py-2"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% Insumo.basicos.each do |insumo| %>
            <%= render partial: "insumos/fila_insumo", locals: { insumo: insumo } %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
