<% content_for :title, "Precios de Vidrios" %>

<div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg mt-8">
  <div class="flex flex-col space-y-1.5 p-6">
    <h1 class="text-2xl font-semibold leading-none tracking-tight">Administrar Precios de Vidrios</h1>
    <p class="text-sm text-muted-foreground">Actualiza la lista de precios por tipo, color y espesor de vidrio.</p>
  </div>
  <div class="p-6 pt-0">
    <%= link_to "Nuevo precio de vidrio", new_precio_vidrio_path, class: "mb-4 inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-3" %>
    <div class="overflow-x-auto mt-4">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Alto</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Ancho</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Color</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Tipo</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Grosor</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Precio</th>
            <th class="px-4 py-2"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @precio_vidrios.each do |precio_vidrio| %>
            <tr>
              <td class="px-4 py-2"><%= precio_vidrio.alto %></td>
              <td class="px-4 py-2"><%= precio_vidrio.ancho %></td>
              <td class="px-4 py-2"><%= precio_vidrio.color %></td>
              <td class="px-4 py-2"><%= precio_vidrio.tipo %></td>
              <td class="px-4 py-2"><%= precio_vidrio.grosor %></td>
              <td class="px-4 py-2 font-semibold text-green-700">$ <%= precio_vidrio.precio %></td>
              <td class="px-4 py-2 text-right">
                <%= link_to "Editar", edit_precio_vidrio_path(precio_vidrio), class: "inline-flex items-center justify-center gap-2 rounded-md text-sm font-medium bg-secondary text-secondary-foreground hover:bg-secondary/80 h-8 px-3" %>
              </td>
            </tr>
          <% end %>
          <% if @precio_vidrios.empty? %>
            <tr>
              <td colspan="7" class="text-center py-8 text-muted-foreground">No hay precios cargados.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
