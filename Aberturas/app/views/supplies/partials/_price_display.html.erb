<%= turbo_frame_tag dom_id(supply) do %>
  <div class="flex items-center gap-4">
    <!-- USD Price Display -->
    <div class="flex flex-col">
      <span class="text-xs text-gray-500 uppercase">USD</span>
      <span class="font-semibold text-blue-700">
        <% if supply.price_usd.present? && supply.price_usd > 0 %>
          US$<%= number_with_precision(supply.price_usd, precision: 2) %>
        <% else %>
          N/A
        <% end %>
      </span>
    </div>
    
    <!-- Peso Price Display -->
    <div class="flex flex-col">
      <span class="text-xs text-gray-500 uppercase">Pesos</span>
      <span class="font-semibold text-green-700">
        <% if supply.price_peso.present? && supply.price_peso > 0 %>
          $<%= number_with_precision(supply.price_peso, precision: 2) %>
        <% else %>
          N/A
        <% end %>
      </span>
    </div>
    
    <!-- Edit Button -->
    <%= link_to edit_supply_path(supply),
        data: { turbo_frame: dom_id(supply) },
        class: "inline-flex items-center justify-center w-10 h-10 rounded-full bg-blue-100 hover:bg-blue-200 text-blue-600 transition-colors duration-150" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
    <% end %>
  </div>
<% end %>
