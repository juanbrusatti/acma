<div class="bg-white border border-gray-200 rounded-2xl shadow-sm p-6 space-y-6">
  <div class="space-y-4">
    <h2 class="text-lg font-semibold text-gray-800">Resumen y acciones</h2>

    <div class="flex justify-between text-sm text-gray-600">
      <span>Subtotal</span>
      <span id="subtotal-price">$<%= number_with_precision(@project.try(:total) || 0, precision: 2) %></span>
    </div>

    <div class="flex justify-between text-sm text-gray-600">
      <span>IVA (21%)</span>
      <span id = "iva-value">$<%= number_with_precision(@project.try(:iva) || 0, precision: 2) %></span>
    </div>

    <div class="border-t border-gray-200 pt-4 flex justify-between text-base font-bold text-gray-900">
      <span>Total estimado</span>
      <span id="price-total">$<%= number_with_precision(@project.try(:total) || 0, precision: 2) %></span>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
    <%= f.submit "Guardar como presupuesto", class: "w-full bg-black text-white font-medium rounded-lg py-2 text-sm hover:opacity-90 transition" %>
    <%= button_tag "Optimizar", type: "button", class: "w-full border border-gray-300 font-medium rounded-lg py-2 text-sm hover:bg-gray-50 transition" %>
    <%= button_tag "Guardar PDF", type: "button", id: "preview-pdf-btn", class: "w-full border border-gray-300 font-medium rounded-lg py-2 text-sm hover:bg-gray-50 transition" %>
    <%= link_to "Volver a proyectos", projects_path, class: "w-full border border-gray-300 font-medium rounded-lg py-2 text-sm text-center hover:bg-gray-50 transition" %>
  </div>
</div>