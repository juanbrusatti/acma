<%# Partial para badge de estado %>
<%# status es un string: 'En Proceso', 'Terminado', 'Pendiente' %>
<% badge_class =
  case status
  when 'Terminado'
    'bg-green-100 text-green-700'
  when 'En Proceso'
    'bg-blue-100 text-blue-700'
  when 'Pendiente'
    'bg-yellow-100 text-yellow-700'
  else
    'bg-gray-100 text-gray-500'
  end
%>
<span class="inline-block rounded-full px-3 py-1 text-xs font-semibold <%= badge_class %> shadow-sm border border-transparent whitespace-nowrap">
  <%= status %>
</span>

