<%= form_with(model: glass_price, url: glass_price_path(glass_price), method: :patch, local: false, data: { turbo_frame: "glass_price_#{glass_price.id}" }) do |f| %>
  <div class="grid grid-cols-4 items-center gap-1 md:gap-2">
    <div class="px-1 md:px-2 py-1 text-center">
      <%= f.text_field :buying_price, value: glass_price.buying_price, placeholder: "Precio compra", class: "w-full rounded-md border px-1 md:px-2 py-1 text-xs md:text-sm text-center" %>
    </div>
    <div class="px-1 md:px-2 py-1 text-center">
      <%= f.text_field :percentage, value: glass_price.percentage, placeholder: "%", class: "w-full rounded-md border px-1 md:px-2 py-1 text-xs md:text-sm text-center" %>
    </div>
    <div class="px-1 md:px-2 py-1 text-center">
      <%= f.text_field :selling_price, value: glass_price.selling_price, placeholder: "Precio venta", class: "w-full px-1 md:px-2 py-1 text-green-700 font-semibold text-xs md:text-sm text-center font-semibold text-center cursor-default focus:outline-none", readonly: true %>
    </div>
    <div class="px-1 md:px-2 py-1 text-center">
      <%= f.submit "âœ“", class: "w-6 h-6 md:w-8 md:h-8 rounded-full bg-green-100 hover:bg-green-200 text-green-600 font-bold text-xs md:text-sm transition-colors duration-150" %>
    </div>
  </div>
<% end %>