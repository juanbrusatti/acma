<div class="flex min-h-screen w-full flex-col">
  <main class="flex flex-1 flex-col gap-4 p-4 md:gap-8 md:p-8">
    <!-- Dashboard Header -->
    <div class="flex items-center gap-4">
      <h1 class="text-2xl font-semibold gradient-text">Dashboard</h1>
    </div>

    <!-- Main Dashboard Cards -->
    <div class="dashboard-grid">
      <%= render 'dashboard/stock_card' %>
      <%= render 'dashboard/projects_card' %>
      <%= render 'dashboard/budget_card' %>
    </div>

    <!-- Secondary Dashboard Section -->
    <div class="dashboard-section">
      <!-- Recent Projects Section -->
      <div class="dashboard-projects-section">
        <%= render 'dashboard/recent_projects' %>
      </div>

      <!-- Side Cards -->
      <div class="grid auto-rows-max items-start gap-4 lg:gap-8">
        <%= render 'dashboard/optimizer_card' %>
        <%= render 'dashboard/prices_card' %>
      </div>
    </div>
  </main>
</div>