<% content_for :title, "Precios" %>

<div class="px-2 md:px-4 lg:px-16 pb-12">
  <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg mt-8 px-3 md:px-6 lg:px-10 w-full">
    <div class="flex flex-col space-y-1.5 p-3 md:p-6">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-xl md:text-2xl font-semibold leading-none tracking-tight">Gestionar precios</h1>
          <p class="text-xs md:text-sm text-muted-foreground">Actualice la lista de precios por tipo, color y grosor del vidrio.</p>
        </div>
      </div>
    </div>
    <div class="p-3 md:p-6 pt-0">
      <div class="overflow-x-auto mt-0">
        <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="px-2 md:px-4 py-2 text-center text-xs font-medium text-muted-foreground uppercase">Tipo</th>
                <th class="px-2 md:px-4 py-2 text-center text-xs font-medium text-muted-foreground uppercase">Grosor</th>
                <th class="px-2 md:px-4 py-2 text-center text-xs font-medium text-muted-foreground uppercase">Color</th>
                <th class="px-2 md:px-4 py-2 text-center text-xs font-medium text-muted-foreground uppercase min-w-96">
                  <div class="grid grid-cols-4 gap-1 md:gap-2 text-center">
                    <div class="text-xs">Precio compra</div>
                    <div class="text-xs">% Ganancia</div>
                    <div class="text-xs">Precio venta</div>
                    <div class="text-xs">Acciones</div>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @combinations.each do |glass_price| %>
                <%= render partial: "partials/glass_prices/glass_price_row", locals: { glass_price: glass_price } %>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>

  <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg mt-8 px-6 md:px-10 w-full">
    <div class="flex flex-col space-y-1.5 p-6">
      <h2 class="text-xl font-semibold leading-none tracking-tight">Precios de insumos</h2>
      <p class="text-sm text-muted-foreground">Edite el precio de cada insumo adicional.</p>
    </div>
    <div class="p-6 pt-0">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Insumo</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Precio M</th>
            <th class="px-4 py-2"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% Supply.basics.each do |supply| %>
            <%= render partial: "partials/supplies/fila_supply", locals: { supply: supply } %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
