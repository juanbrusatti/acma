<% content_for :title, "Glass Prices" %>

<div class="px-4 md:px-16 pb-12">
  <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg mt-8 px-6 md:px-10 w-full">
    <div class="flex flex-col space-y-1.5 p-6">
      <h1 class="text-2xl font-semibold leading-none tracking-tight">Manage Glass Prices</h1>
      <p class="text-sm text-muted-foreground">Update the price list by type, color and glass thickness.</p>
    </div>
    <div class="p-6 pt-0">
      <div class="overflow-x-auto mt-4">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Type</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Thickness</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Color</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Price mÂ²</th>
              <th class="px-4 py-2"></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @combinations.each do |glass_price| %>
              <%= render partial: "partials/glass_prices/glass_price_row", locals: { glass_price: glass_price } %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="rounded-lg border border-gray-200 bg-card text-card-foreground shadow-lg mt-8 px-6 md:px-10 w-full">
    <div class="flex flex-col space-y-1.5 p-6">
      <h2 class="text-xl font-semibold leading-none tracking-tight">Supply Prices</h2>
      <p class="text-sm text-muted-foreground">Edit the price of each additional supply.</p>
    </div>
    <div class="p-6 pt-0">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Supply</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-muted-foreground uppercase">Price M</th>
            <th class="px-4 py-2"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% Supply.basics.each do |supply| %>
            <%= render partial: "partials/supplies/fila_supply", locals: { supply: supply } %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
