<%= form_with(model: insumo, url: insumo_path(insumo), method: :patch, local: false, data: { turbo_frame: "insumo_#{insumo.id}" }) do |f| %>
  <div class="flex items-center gap-2">
    <%= f.text_field :precio, value: insumo.precio, placeholder: "Precio", class: "w-24 rounded-md border px-2 py-1 text-green-700 font-semibold text-center" %>
    <%= f.submit "Confirmar", class: "inline-flex items-center justify-center min-w-[110px] rounded-md text-sm font-medium bg-gray-200 text-gray-900 shadow transition-all duration-150 hover:bg-gray-800 hover:text-white active:translate-y-0.5 h-8 px-4" %>
  </div>
<% end %> 